<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--底部对话框样式-->
    <style name="ltCustomDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <!-- 对话框是否有遮盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--底部进出动画-->
    <style name="ltAnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/lt_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/lt_bottom_out</item>
    </style>
</resources>